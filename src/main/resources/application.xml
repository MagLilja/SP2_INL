    <bean id="performanceTimingAdvice" class="com.yrgo.advice.PerformanceTimingAdvice">

    </bean>

    <aop:config>
        <aop:aspect id="performanceTimingAspect" ref="performanceTimingAdvice">
            <aop:pointcut id="performanceTimingPointcut" expression="execution(* com.yrgo.services..*.*(..)) || execution(* com.yrgo.dataaccess..*.*(..))"/>
            <aop:around method="timeMethod" pointcut-ref="performanceTimingPointcut"/>
        </aop:aspect>
    </aop:config>

